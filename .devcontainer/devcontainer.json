// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-outside-of-docker
{
	"name": "Docker outside of Docker",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",

	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
			"version": "latest",
			"enableNonRootDocker": "true",
			"moby": "false"
		}
	},

	"containerEnv": {
		"IP_Address": "192.168.1.19",
		"self_run_timer": "10",
		"Log_Level": "Error",
		"Debug_File_Location": "",
		"Print_Raw_Registers": "True",
		"MQTT_Output": "True",
		"MQTT_Address": "swarm_mqtt",
		"MQTT_Username": "",
		"MQTT_Password": "",
		"MQTT_Topic": "BoilerBoost",
		"MQTT_Port": "1883",
		"ha_device_prefix": "Boiler_Boost"
	},

	// Use this environment variable if you need to bind mount your local source code into a new container.
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python"
			]
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [1337]
	"appPort": ["1337:1337"],
	"runArgs": ["--network=smart-net"],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "docker --version",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
	"postStartCommand": "sudo apt update && sudo apt install -y python3-pip && pip install -r requirements.txt"
}
